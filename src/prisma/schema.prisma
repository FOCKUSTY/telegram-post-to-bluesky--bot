generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id              String   @id
  url             String?
  userId          String
  blueskyId       String
  blueskyPassword String
  commentsEnabled Boolean  @default(true)
  enabled         Boolean  @default(true)
  verified        Boolean  @default(false)
  threads         Thread[]
}

model Thread {
  id        String   @id
  uri       String
  cid       String
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Message {
  id  String @id
  uri String
  cid String
}
